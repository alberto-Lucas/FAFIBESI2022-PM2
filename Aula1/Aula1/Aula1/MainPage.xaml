<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aula1.MainPage"
             BackgroundColor ="#1e1e1e"
             Visual="Default">

    <ContentPage.Content>
        <StackLayout Padding="20">

            <Frame Padding="20" CornerRadius="0" BackgroundColor ="#1e1e1e"  HorizontalOptions="Start">
                <StackLayout>
                    <Button Text="Voltar"
                            TextColor="White"
                            x:Name="btnVoltar"
                            Clicked="btnVoltar_Clicked"/>
                </StackLayout>
            </Frame>

            

            <Label Text="Usuário: " 
               TextColor="Black"
               FontSize="25"/>
        <Entry Placeholder="Usuário" />
        <Label Text="Senha:" 
               TextColor="Black"
               FontSize="25"/>
        <Entry Placeholder="Senha" 
               x:Name="txtSenha"/>
            <Button Text="Entrar" 
                    BackgroundColor="Gray"
                    TextColor="White"
                    CornerRadius="20"
                    HorizontalOptions="Center"
                    Padding="50,10"
                    x:Name="btnEntrar"
                    Clicked="btnEntrar_Clicked"/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>
